{
  "name": "nmrium-cli",
  "version": "0.5.0",
  "description": "CLI commands related to nmrium",
  "main": "lib/index.js",
  "module": "src/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "prepack": "rollup -c",
    "test": "npm run test-coverage && npm run eslint",
    "test-coverage": "jest --coverage",
    "test-only": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/nmrium-cli.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/nmrium-cli/issues"
  },
  "homepage": "https://github.com/cheminfo/nmrium-cli#readme",
  "jest": {
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "<rootDir>/src/__tests__/data/"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@types/jest": "^28.1.6",
    "eslint": "^8.21.0",
    "eslint-config-cheminfo": "^8.0.2",
    "esm": "^3.2.25",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "recursive-readdir": "^2.2.2",
    "rollup": "^2.77.2"
  },
  "bin": {
    "nmrium-cli": "bin/nmrium.js",
    "nmrium": "bin/nmrium.js"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "folder-hash": "^4.0.2",
    "fs-readdir-recursive": "^1.1.0",
    "git-remote-origin-url": "^3.1.0",
    "git-url-parse": "^12.0.0",
    "jcampconverter": "^9.0.2",
    "md5": "^2.3.0",
    "openchemlib": "^7.5.0",
    "recursive-iterator": "^3.3.0",
    "traverse": "^0.6.6",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  }
}
